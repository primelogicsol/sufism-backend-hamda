{
  "info": {
    "name": "Sufism Vendor API Collection",
    "description": "Complete API collection for vendor operations in Sufism Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:6015/v1",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "vendorId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Vendor Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"vendor@example.com\",\n  \"password\": \"password123\",\n  \"businessName\": \"Doe Enterprises\",\n  \"businessType\": \"Retail\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/vendor-register",
              "host": ["{{baseUrl}}"],
              "path": ["vendor-register"]
            }
          },
          "response": []
        },
        {
          "name": "Vendor Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.accessToken) {",
                  "        pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "        pm.collectionVariables.set('vendorId', response.data.user.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/vendor-login",
              "host": ["{{baseUrl}}"],
              "path": ["vendor-login"]
            }
          },
          "response": []
        },
        {
          "name": "Update Vendor Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe Updated\",\n  \"businessName\": \"Doe Enterprises LLC\",\n  \"businessType\": \"E-commerce\",\n  \"businessLegalStructure\": \"LLC\",\n  \"einNumber\": \"12-3456789\",\n  \"contactPerson\": \"John Doe\",\n  \"phone\": \"+1234567890\",\n  \"address\": \"123 Business St\",\n  \"city\": \"New York\",\n  \"state\": \"NY\",\n  \"zipCode\": \"10001\",\n  \"country\": \"USA\",\n  \"bankName\": \"Chase Bank\",\n  \"accountNumber\": \"1234567890\",\n  \"routingNumber\": \"021000021\",\n  \"isCompleted\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/vendor-register/{{vendorId}}",
              "host": ["{{baseUrl}}"],
              "path": ["vendor-register", "{{vendorId}}"]
            }
          },
          "response": []
        }
      ]
    },
