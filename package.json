{
  "name": "backend-node-template",
  "version": "1.0.1",
  "description": "",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "lint": "eslint . && bun run type-check && bun run fmt",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "fmt": "prettier --write .",
    "prebuild": "bun run lint && rimraf -rf ./dist",
    "build": "bun run tsc --build",
    "dev": "bun run build  && concurrently  \"bun --watch ./src/server.ts\" \"tsc -w\"",
    "start": "bun run build && node --env-file .env ./dist/server.js",
    "commit-lint": "commitlint  --edit",
    "precommit": "concurrently \"eslint .\" \"bun run type-check && bun run fmt && git add .\"",
    "prepare": "husky",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma deploy",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "project:deploy": "bun run db:generate && bun run db:push && bun run start"
  },
  "keywords": [],
  "author": "hamda",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.9.3",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prisma": "^6.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.6.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "rate-limiter-flexible": "^5.0.4",
    "reshttp": "^2.0.2",
    "rimraf": "^6.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "husky": {
    "skipCI": true
  }
}
